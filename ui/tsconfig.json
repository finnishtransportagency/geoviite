{
    "compilerOptions": {
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUncheckedIndexedAccess": true,
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES2022",
            "DOM.Iterable",
            "ScriptHost",
            "ES2023.Array"
        ],
        "target": "ES2022",
        "jsx": "react",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "downlevelIteration": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "./src/*"
            ]
        },
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*",
        "index.d.ts"
    ]
}
