{
    "testEnvironment": "jsdom",
    "roots": [
        "<rootDir>/"
    ],
    "moduleDirectories": [
        "node_modules",
        "src"
    ],
    "testMatch": [
        "**/*.test.ts"
    ],
    "transform": {
        "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "moduleNameMapper": {
        "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
        "\\.(scss|css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
}
